<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/back_ic"
             />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display"
            android:layout_marginStart="25dp"
            android:text="@string/settings"
            android:textSize="@dimen/main_screen_text_size"
            android:textColor="@color/black"
            android:letterSpacing="@dimen/main_letters_spacing"
            android:textStyle="bold"
            android:textAllCaps="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_height"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/ys_display"
            android:gravity="center"
            android:letterSpacing="@dimen/main_letters_spacing"
            android:text="@string/dark_mode"
            android:textColor="@color/black"
            android:textSize="@dimen/settings_text_size" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Switch
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity= "center"
            android:layout_marginEnd="-11dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_height"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/settings_text_size"
            android:textColor="@color/black"
            android:fontFamily="@font/ys_display"
            android:text="@string/share_apl"
            android:letterSpacing="@dimen/main_letters_spacing"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_ic"
            android:layout_gravity="center"
            android:contentDescription="@string/share_apl" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_height"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/settings_text_size"
            android:textColor="@color/black"
            android:fontFamily="@font/ys_display"
            android:text="@string/write_support"
            android:letterSpacing="@dimen/main_letters_spacing"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/support_ic"
            android:layout_gravity="center"
            android:contentDescription="@string/write_support" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/settings_height"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/settings_text_size"
            android:textColor="@color/black"
            android:fontFamily="@font/ys_display"
            android:text="@string/terms_of_use"
            android:letterSpacing="@dimen/main_letters_spacing"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/accept_ic"
            android:layout_gravity="center"
            android:contentDescription="@string/terms_of_use" />

    </LinearLayout>
</LinearLayout>