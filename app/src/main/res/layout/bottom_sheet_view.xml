<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="44dp"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/bottom_sheet_track_cover"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_gravity="center_vertical"
        android:layout_marginVertical="8dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/RoundedCorners2dp"
        tools:src="@drawable/placeholder"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlist_name_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/playlist_name_text"
            tools:text="Playlist name"/>

        <TextView
            android:id="@+id/tracks_count_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/tracks_count_bottom_sheet"
            tools:text="0 треков"/>
    </LinearLayout>
</LinearLayout>