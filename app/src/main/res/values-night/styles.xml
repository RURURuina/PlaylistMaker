<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name = "cornerRadius">16dp </item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_weight">1</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle"></item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsMainString">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:letterSpacing">@dimen/main_letters_spacing</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name ="SettingsStrings">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsSpacing">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BackButton">
        <item name="android:tint">@color/white</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="SearchString">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">@dimen/main_letters_spacing</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableStart">@drawable/search_ic_search_activity_night</item>
        <item name="android:textColor">@color/black</item>
    </style>




</resources>