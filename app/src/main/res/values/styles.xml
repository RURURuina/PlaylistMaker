<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MenuButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name = "cornerRadius">16dp </item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">22sp</item>
        <item name="iconGravity">textStart</item>
        <item name="android:layout_weight">1</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textStyle"></item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingsMainString">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="android:textColor">@color/night_theme_bg</item>
        <item name="android:letterSpacing">@dimen/main_letters_spacing</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name ="SettingsStrings">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Switch" parent="Theme.MyApp">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="thumbTint">@drawable/switch_thumb_selector</item>
    </style>

    <style name="SettingsSpacing">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BackButton">
        <item name="android:tint">@color/black</item>
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
    </style>

    <style name="SearchString">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">@dimen/main_letters_spacing</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/text_gray</item>
       <item name="android:drawableStart">@drawable/search_ic_search_activity</item>
    </style>

    <style name="TrackName">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">@dimen/main_letters_spacing</item>
    </style>

    <style name="AuthorAndDur">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:letterSpacing">@dimen/main_letters_spacing</item>
    </style>

    <style name="Arrow">
        <item name="android:src">@drawable/arrow_right</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Dot">
        <item name="android:src">@drawable/ellipse</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ServerErrorImg">
        <item name="android:src">@drawable/server_error_placeholder</item>
    </style>

    <style name="NothingFoundImg">
        <item name="android:src">@drawable/nothing_found_placeholder</item>
    </style>

    <style name="ErrorTextAndNothingFoundText">
        <item name="android:textColor">@color/night_theme_bg</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="updateButton">
        <item name="cornerRadius">54dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:letterSpacing">@dimen/main_letters_spacing</item>
        <item name="android:backgroundTint">@color/night_theme_bg</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="smallButtonStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:backgroundTint">@color/night_theme_bg</item>
    </style>

    <style name="youSearch">
        <item name="android:text">@string/you_search</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">19sp</item>
        <item name="android:layout_marginTop">36dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/night_theme_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">visible</item>
    </style>

    <style name="audioPlayerText">
        <item name="android:textColor">@color/black</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="play_ic">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:src">@drawable/play</item>
    </style>

    <style name="add_to_playlist">
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:src">@drawable/add_to_playlist</item>
    </style>

    <style name="favorite">
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:src">@drawable/unfavorite</item>
    </style>
    
    <style name="timer">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="audioPlayerSubj">
        <item name="android:layout_marginStart">14dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    
    <style name="trackDescription">
        <item name="android:layout_marginEnd">14dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="audioPlayerBackIc">
        <item name="icon">@drawable/back_ic</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="progressBar">
        <item name="android:indeterminateTint">@color/progress_bar_blue</item>
        <item name="android:layout_marginTop">200dp</item>
    </style>

    <style name="mediatekaText">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="tabStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tabIndicatorColor">@color/night_theme_bg</item>
    </style>

    <style name="tabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/night_theme_bg</item>
    </style>

    <style name="bottomNavStyle">
        <item name="android:background">@color/white</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
    </style>

    <style name="InputTextLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@drawable/box_stroke</item>
        <item name="hintTextColor">@color/progress_bar_blue</item>
    </style>

    <style name="InputTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>

        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="playlistHeaderTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="RoundedCorners8dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="RoundedCorners2dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">2dp</item>
    </style>

    <style name="playlist_text_12sp">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="playlist_name_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="tracks_count_bottom_sheet">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/background_color</item>
        <item name="colorSecondary">@color/background_color</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="menu_style">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:paddingVertical">22dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="placeholder_message">
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
    </style>
</resources>